#Controls {
  flex-direction: row;
  position: absolute;
  right: 24px;
  top: 24px;
}

#Controls .control-button {
  border-radius: 8px;
  height: 64px;
  margin-left: 16px;
  width: 64px;
}

#Controls .control-button:hover {
  scale: 1.1;
}

#Controls .control-button:active {
  top: 1px;
  left: 1px;
}

#Options {
  position: absolute;
  top: 64px;
  transition-duration: 0.2s;
  transition-property: opacity;
}

#Controls #Options .control-button {
  margin-top: 16px;
}
