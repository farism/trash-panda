#Currency {
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5);
  box-sizing: border-box;
  flex-direction: row;
  left: 24px;
  position: absolute;
  top: 48px;
}

#CurrencyIcon {
  height: 32px;
  width: 32px;
  flex-shrink: 0;
  margin: 0 8px;
}

#CurrencyText {
  -unity-text-align: middle-right;
  color: white;
  flex-grow: 1;
  text-align: right;
  font-size: 24px;
  margin: 0 8px;
}
