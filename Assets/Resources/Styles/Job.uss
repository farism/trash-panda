#Job {
  bottom: 96px;
}

#Skills {
  align-items: center;
  bottom: 0;
  flex-direction: row;
  justify-content: center;
  position: absolute;
  width: 100%;
}

#Skills Button {
  -unity-background-scale-mode: scale-to-fit;
  border-width: 3px;
  color: black;
  font-size: 24px;
  height: 64px;
  margin: 0 4px;
  border-radius: 8px;
  overflow: none;
  width: 64px;
}

#Skills Button:hover {
  scale: 1.1;
}

#Skills Button:active {
  background-color: white;
  border-bottom-width: 2px;
  border-right-width: 2px;
  left: 2px;
  top: 2px;
}

#Skills Button .fuel {
  background-color: white;
  height: 8px;
  left: -2px;
  padding: 2px;
  position: absolute;
  top: -16px;
  width: 64px;
}

#Skills Button .fuel-fill {
  background-color: green;
  height: 100%;
  width: 100%;
}

#Skills Button .yellow-button {
  border-radius: 8px;
  border-width: 2px;
  color: rgba(62, 42, 20, 1);
  height: 24px;
  left: 4px;
  padding: 12px;
  position: absolute;
  top: 48px;
  width: 48px;
}

.skill-cooldown {
  background-color: rgba(0, 0, 0, 0.5);
  height: 100%;
  width: 0;
}

#Held {
  -unity-text-align: middle-center;
  color: white;
  font-size: 24px;
  position: absolute;
  translate: -50% -96px;
  width: 100px;
  transition-duration: 0.25s;
  transition-property: left, top;
}

#LocationPollution {
  color: white;
  font-size: 24px;
  position: absolute;
  bottom: 96px;
  left: 360px;
  translate: -50% 0;
}
